# Definicion de mi funcion
get_variance <- function(num){
  lista <- c()
  for (i in num)
    lista[i] <- num[i] - mean(num)
  
  resultado <- (sum(lista)^2)/(length(num)-1)
  
return (resultado)
}

get_variance(c(1,2,200))



