# For loop
library(tibble)

df <- tibble(
  a = rnorm(10),
  b = rnorm(10),
  c = rnorm(10),
  d = rnorm(10),
)
df

resultado <- vector("double", ncol(df))

for (i in seq_along(df))
  resultado[i] <- mean(df[[i]])
resultado


